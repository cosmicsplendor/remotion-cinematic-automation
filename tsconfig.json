{
  "compilerOptions": {
    "target": "ES2018",
    "module": "commonjs",
    "jsx": "react-jsx",
    "strict": true,
    "noEmit": true,
    "baseUrl": ".", // This is project root
    "paths": {
      "lib/*": [
        "lib/*"
      ]
    },
    "lib": [
      "es2015"
    ],
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noUnusedLocals": true,
    "resolveJsonModule": true,
    "typeRoots": [
      "./node_modules/@types",
      "./lib/@types"
    ],
  },
  "include": [
    "src/**/*",
    "lib/**/*"
  ],
  "exclude": [
    "remotion.config.ts"
  ]
}